<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title>Backchannel Application</title>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <link href="style.css" rel="stylesheet" type="text/css" />
</head>
<body>

<div id="header">
  <div class="title">
    <h1>B<dfn>ackchannel</dfn> A<dfn>pplication</dfn></h1>

  </div>
</div>
<div id="content">
  <div id="menu">

    </ul>

  </div>
  <div id="main">
    <div class="left">
      <div class="main_content">

        <h1>Listing comms</h1>

        <table>
          <tr>
            <th>Content</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @comms.each do |comm| %>
              <tr>
                <td><%= comm.content %></td>
                <td><%= link_to 'Show', comm %></td>
                <td><%= link_to 'Edit', edit_comm_path(comm) %></td>
                <td><%= link_to 'Destroy', comm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
        </table>

        <br />

        <%= link_to 'New Comm', new_comm_path %>


      </div>
    </div>
    <div class="right">


      <h2>Search</h2>
      <%= form_tag :controller => 'posts', :action => 'show_search' do%>

          <%= text_field_tag :search, params[:search] %>  <br/> <br/>
          <label> Search by :</label>
          <%= radio_button_tag 'search_by', 'unityid' %> <label>unityid</label>
          <%= radio_button_tag 'search_by', 'category' %> <label>category</label>
          <%= radio_button_tag 'search_by', 'tag' %>   <label>tag</label>
          <%= radio_button_tag 'search_by', 'content' %>  <label>content</label>  <br/> <br/>
          <%= submit_tag "Search" %>
      <% end %>
      <%= yield %>

    </div>
  </div>

  <div id="footer">
